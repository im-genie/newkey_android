<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- 이 레이아웃은 RecyclerView의 각 아이템을 위한 것입니다. -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 이 TextView는 드롭다운 메뉴를 위한 제목을 나타냅니다. -->
        <TextView
            android:id="@+id/itemTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="메인 제목"
            android:padding="16dp"
            android:background="?attr/selectableItemBackground"
            android:textAppearance="?attr/textAppearanceListItem" />

        <!-- 이 LinearLayout은 체크박스 목록이 표시될 곳입니다. 기본적으로는 숨겨져 있어야 합니다. -->
        <LinearLayout
            android:id="@+id/subItemContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- 여기에 체크박스 아이템들을 프로그래밍적으로 추가할 수 있습니다. -->
            <!-- 예시로 하나의 체크박스를 추가합니다. -->
            <CheckBox
                android:id="@+id/checkbox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="서브 아이템 1"
                android:padding="16dp" />

            <!-- 필요한 만큼 더 많은 체크박스를 추가할 수 있습니다. -->
        </LinearLayout>
    </LinearLayout>

</LinearLayout>