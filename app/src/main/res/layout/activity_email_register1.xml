<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EmailRegisterActivity1"
    android:background="@color/gray_600"
>

    <LinearLayout
        android:id="@+id/back_from_history"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="bottom"
        >


        <ImageView
            android:id="@+id/back"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginBottom="15dp"
            app:srcCompat="@drawable/back" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:text="회원가입"
            android:textColor="@color/gray_100"
            android:fontFamily="@font/pretendardmedium"
            android:textSize="24dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:text="사용하실\n이메일을 입력해 주세요"
            android:fontFamily="@font/pretendardmedium"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:textColor="@color/gray_100"/>

        <TextView
            android:id="@+id/emailText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이메일"
            android:textSize="14dp"
            android:textColor="@color/gray_100"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/email1"
                android:layout_width="140.5dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:background="@drawable/radius_8"
                android:backgroundTint="@color/gray_400"
                android:fontFamily="@font/pretendardregular"
                android:gravity="center"
                android:hint="newkey123"
                android:textColor="@color/gray_100"
                android:textColorHint="@color/gray_300"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/whelk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/gray_300"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="140.5dp"
                android:layout_height="44dp"
                android:layout_gravity="right"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/gray_400"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/radius_8">

                <Spinner
                    android:id="@+id/email2"
                    android:layout_width="140.5dp"
                    android:layout_height="44dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:spinnerMode="dropdown"
                    android:textColor="@color/gray_100"
                    android:textColorHint="@color/gray_300"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/emailDpCheck"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:background="@drawable/radius_8"
            android:backgroundTint="@color/gray_400"
            android:fontFamily="@font/pretendardregular"
            android:text="중복 확인"
            android:textColor="@color/gray_300"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/emailDpCheckText"
            android:layout_width="230dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/pretendardregular"
            android:gravity="center"
            android:text=""
            android:textColor="@color/key_green_400"
            android:textSize="12dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/next"
                android:layout_width="87dp"
                android:layout_height="40dp"
                android:background="@drawable/radius_100"
                android:backgroundTint="@color/gray_400"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">


                <ImageView
                    android:id="@+id/next_arrow"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="16dp"
                    app:srcCompat="@drawable/button_next" />

                <TextView
                    android:id="@+id/next_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/pretendardregular"
                    android:text="다음"
                    android:textColor="@color/gray_100"
                    android:textSize="14dp" />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>


</LinearLayout>