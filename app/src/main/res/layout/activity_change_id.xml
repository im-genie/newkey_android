<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangeIdActivity"
    android:background="@color/black"
    android:backgroundTint="@color/black">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">


        <Button
            android:id="@+id/inputId"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="249dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/rounded_corner_15"
            tools:layout_editor_absoluteX="41dp"
            tools:layout_editor_absoluteY="249dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="350dp"
            android:layout_height="76dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="128dp"
            android:text="사용하실 \n별명을 입력해 주세요"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textColorHint="@color/gray_100"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editUserId"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="249dp"
            android:layout_marginEnd="20dp"
            android:ems="10"
            android:hint="뉴키123"
            android:inputType="text"
            android:textColor="@color/gray_100"
            android:textColorHint="@color/gray_400"
            />

        <ImageButton
            android:id="@+id/backFromProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/profile_bar" />

        <Button
            android:id="@+id/completeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/key_green_400"
            android:text="완료"
            android:layout_marginTop="700dp"
            android:layout_marginStart="280dp"
            android:textColor="@color/black"
            android:textSize="18dp" />


    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>