<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Cardnews2Fragment"
    android:background="@color/gray_600"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/gray_500_40_100"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/mediaCircleImg"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:src="@drawable/news_press_img"/>

            <TextView
                android:id="@+id/publisher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:fontFamily="@font/pretendardregular"
                android:text="한국일보"
                android:textColor="@color/gray_100"
                android:textSize="12dp">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cardnews_button"
            android:layout_marginTop="22dp"
            android:layout_marginRight="16dp"
            android:layout_gravity="right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/pretendardregular"
                android:text="기사 전문"
                android:textColor="@color/gray_600"
                android:textSize="12dp"></TextView>
            <ImageView
                android:id="@+id/content"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/button_next_black"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="5dp">
            </ImageView>
        </LinearLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="68dp"
            android:text="1441일 만에 불 꺼진 채취실...“덕분입니다. 고맙습니다."
            android:fontFamily="@font/pretendardregular"
            android:textSize="20dp"
            android:textColor="@color/gray_100"
            android:maxLines="2">
        </TextView>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2023년 12월 31일"
            android:fontFamily="@font/pretendardregular"
            android:textColor="@color/gray_300"
            android:textSize="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="135dp">
        </TextView>

        <TextView
            android:id="@+id/reporter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="135dp"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/pretendardregular"
            android:text="조태형 기자"
            android:textColor="@color/gray_300"
            android:textSize="10dp">

        </TextView>

        <TableLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="170dp"
            android:layout_marginRight="16dp">
            <TableRow>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/polygon"
                            android:layout_gravity="center">
                        </ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="언제"
                            android:textSize="12dp"
                            android:fontFamily="@font/pretendardregular"
                            android:textColor="@color/gray_100"
                            android:layout_gravity="center"
                            android:layout_marginLeft="4dp">
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/cardnews_background"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="7dp">
                        <TextView
                            android:id="@+id/when"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2023년 12월 31일"
                            android:textSize="12dp"
                            android:textColor="@color/gray_100"
                            android:fontFamily="@font/pretendardregular"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:layout_marginRight="12dp">
                        </TextView>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/polygon"
                            android:layout_gravity="center">
                        </ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="누가"
                            android:textSize="12dp"
                            android:fontFamily="@font/pretendardregular"
                            android:textColor="@color/gray_100"
                            android:layout_gravity="center"
                            android:layout_marginLeft="4dp">
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/cardnews_background"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:id="@+id/who"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="의료진"
                            android:textSize="12dp"
                            android:textColor="@color/gray_100"
                            android:fontFamily="@font/pretendardregular"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:layout_marginRight="12dp">
                        </TextView>
                    </LinearLayout>
                </LinearLayout>
            </TableRow>
            <TableRow
                android:layout_marginTop="16dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/polygon"
                            android:layout_gravity="center">
                        </ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="어디서"
                            android:textSize="12dp"
                            android:fontFamily="@font/pretendardregular"
                            android:textColor="@color/gray_100"
                            android:layout_gravity="center"
                            android:layout_marginLeft="4dp">
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/cardnews_background"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="7dp">
                        <TextView
                            android:id="@+id/where"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="서울 광진구 보건소 선별진료소"
                            android:textSize="12dp"
                            android:textColor="@color/gray_100"
                            android:fontFamily="@font/pretendardregular"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:layout_marginRight="12dp">
                        </TextView>
                    </LinearLayout>
                </LinearLayout>
            </TableRow>
            <TableRow
                android:layout_marginTop="16dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/polygon"
                            android:layout_gravity="center">
                        </ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="무엇을"
                            android:textSize="12dp"
                            android:fontFamily="@font/pretendardregular"
                            android:textColor="@color/gray_100"
                            android:layout_gravity="center"
                            android:layout_marginLeft="4dp">
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/cardnews_background"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="7dp">
                        <TextView
                            android:id="@+id/what"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="코로나 검체 채취"
                            android:textSize="12dp"
                            android:textColor="@color/gray_100"
                            android:fontFamily="@font/pretendardregular"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:layout_marginRight="12dp">
                        </TextView>
                    </LinearLayout>
                </LinearLayout>
            </TableRow>
            <TableRow
                android:layout_marginTop="16dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/polygon"
                            android:layout_gravity="center">
                        </ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="어떻게"
                            android:textSize="12dp"
                            android:fontFamily="@font/pretendardregular"
                            android:textColor="@color/gray_100"
                            android:layout_gravity="center"
                            android:layout_marginLeft="4dp">
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/cardnews_background"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="7dp">
                        <TextView
                            android:id="@+id/how"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="전국 선별진료소 506곳이 문을 어쩌구 어쩌구"
                            android:textSize="12dp"
                            android:textColor="@color/gray_100"
                            android:fontFamily="@font/pretendardregular"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:layout_marginRight="12dp">
                        </TextView>
                    </LinearLayout>
                </LinearLayout>
            </TableRow>
            <TableRow
                android:layout_marginTop="16dp"
                android:layout_marginBottom="26dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/polygon"
                            android:layout_gravity="center">
                        </ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="왜"
                            android:textSize="12dp"
                            android:fontFamily="@font/pretendardregular"
                            android:textColor="@color/gray_100"
                            android:layout_gravity="center"
                            android:layout_marginLeft="4dp">
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/cardnews_background"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="7dp">
                        <TextView
                            android:id="@+id/why"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="코로나19 선별진료소 운영이 2023년 12월 31일 종료되어 운영 종료 시간에 의료진이 퇴근 준비 어쩌구"
                            android:textSize="12dp"
                            android:textColor="@color/gray_100"
                            android:fontFamily="@font/pretendardregular"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:layout_marginRight="12dp">
                        </TextView>
                    </LinearLayout>
                </LinearLayout>
            </TableRow>
        </TableLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>