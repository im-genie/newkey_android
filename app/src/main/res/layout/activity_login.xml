<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity"
    android:background="@color/gray_600">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <LinearLayout
            android:id="@+id/back_from_history"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="bottom">

            <ImageView
                android:id="@+id/back"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginBottom="15dp"
                app:srcCompat="@drawable/back" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:text="로그인"
                android:textColor="@color/gray_100"
                android:textSize="24dp" />
        </LinearLayout>


        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginTop="90dp"
            app:srcCompat="@drawable/logo_login" />

        <TextView
            android:id="@+id/emailText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이메일"
            android:textSize="14dp"
            android:textColor="@color/gray_100"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/email1"
                android:layout_width="140.5dp"
                android:layout_height="44dp"
                android:hint="newkey123"
                android:textColor="@color/gray_100"
                android:textColorHint="@color/gray_300"
                android:backgroundTint="@color/gray_400"
                android:paddingStart="16dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner_15"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/whelk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/gray_300"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="140.5dp"
                android:layout_height="44dp"
                android:layout_gravity="right"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/gray_400"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/radius_8">

                <Spinner
                    android:id="@+id/email2"
                    android:layout_width="140.5dp"
                    android:layout_height="44dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:spinnerMode="dropdown"
                    android:textColor="@color/gray_100"
                    android:textColorHint="@color/gray_300"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/pwText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_100"
            android:text="비밀번호"
            android:textSize="14dp"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <EditText
                android:id="@+id/pw"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:textColor="@color/gray_100"
                android:textColorHint="@color/gray_300"
                android:backgroundTint="@color/gray_400"
                android:paddingStart="16dp"
                android:hint="영어, 숫자 조합 6자리 이상"
                android:textSize="18dp"
                android:inputType="textPassword"
                android:background="@drawable/rounded_corner_15"
                android:layout_marginTop="10dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/pwFind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:text="비밀번호 찾기"
            android:textSize="12dp"
            android:textColor="@color/gray_300"
            android:background="@android:color/transparent"
            android:gravity="start"
            android:padding="0dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/key_green_400"
        android:background="@drawable/rounded_corner_40"
        android:text="로그인"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="52dp"/>

</LinearLayout>