<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="184dp"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp">

    <ImageView
        android:id="@+id/news2_item_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/test1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/black_gradation"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/news2_bookmark"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/bookmark_unchecked"
            android:layout_marginTop="12dp"
            android:layout_marginRight="16dp"
            android:layout_gravity="right|top"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/news2_publisher_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/news2_publisher_icon"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/news2_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="한국일보"
                android:textColor="@color/gray_100"
                android:textSize="12dp"
                android:fontFamily="@font/pretendardregular"
                android:layout_gravity="center_vertical"
                android:maxLines="1"/>
        </LinearLayout>

        <TextView
            android:id="@+id/news2_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="20.5dp"
            android:text="2시간 전"
            android:textColor="@color/gray_100"
            android:textSize="10dp"
            android:fontFamily="@font/pretendardregular"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/news2_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="53dp"
            android:fontFamily="@font/pretendardmedium"
            android:padding="4dp"
            android:text="'물가 잡아먹은 과일값부터 잡는다...' 수입 과일 역대 최대 면세"
            android:textColor="@color/gray_100"
            android:textSize="16dp"
            android:maxLines="2"/>
    </FrameLayout>
</androidx.cardview.widget.CardView>
